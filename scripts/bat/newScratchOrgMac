 #!/bin/bash

# Oppretter scratch org
sf org create scratch --definition-file config/project-scratch-def.json --alias $1 --duration-days $2 --set-default --json --wait 30

# Installer crm-platform-base ver. 0.289
sf package install --package 04tQC000000yAe1YAE --no-prompt --installation-key $3 --wait 30 --publish-wait 30

# Installer crm-shared-flowComponents ver. 0.4
sf package install --package 04t7U0000008qz4QAA --no-prompt --installation-key $3 --wait 30 --publish-wait 30

# Installer crm-henvendelse-base ver. 0.36
sf package install --package 04tQC000000uSXtYAM --no-prompt --installation-key $3 --wait 30 --publish-wait 30

# Installer platform-data-model ver. 0.1.2
sf package install --package 04tQC000000oHLpYAM --no-prompt --wait 30 --publish-wait 30

# Installer custom-metadata-dao ver. 1.2
sf package install --package 04tQC000000oHKDYA2 --no-prompt --wait 30 --publish-wait 30

# Installer custom-permission-helper ver. 0.1.2
sf package install --package 04tQC000000oGw2YAE --no-prompt --wait 30 --publish-wait 30

# Installer feature-toggle ver. 0.1.3
sf package install --package 04tQC000000oHP3YAM --no-prompt --wait 30 --publish-wait 30

# Installer crm-platform-integration ver. 0.162
sf package install --package 04tQC000000xwmMYAQ --no-prompt --installation-key $3 --wait 30 --publish-wait 30

# Installer crm-platform-access-control ver. 0.162
sf package install --package 04tQC000000tlPhYAI --no-prompt --installation-key $3 --wait 30 --publish-wait 30

# Installer crm-community-base ver. 0.128
sf package install --package 04tQC000000ocOfYAI --no-prompt --installation-key $3 --wait 30 --publish-wait 30

# Installer crm-platform-reporting ver. 0.41
sf package install --package 04tKB000000YAWDYA4 --no-prompt --installation-key $3 --wait 30 --publish-wait 30

# Dytt kildekoden til scratch org'en
sf project deploy start

# Tildel tilatelsessett til brukeren
sf org assign permset --name HOT_Admin
sf org assign permset --name HOT_Config

# Publish Experience Site
sf community publish --name Tolketjenesten

# Opprett testdata
sf apex run --file scripts/apex/createTestData.apex

# done