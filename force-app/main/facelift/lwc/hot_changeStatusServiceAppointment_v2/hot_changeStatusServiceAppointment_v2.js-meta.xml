<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>HOT Change Status Tags</masterLabel>
    <description>Group of button that only one button can be selected</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="label" type="String" label="Radio Group Label"
                description="Text above the radio buttons" />

            <property name="statusDekketLabel" type="String" label="Choice 1 Label"
                description="Text shown to the user" />
            <property name="statusDekketValue" type="String" label="Choice 1 Value"
                description="Value stored in Flow" />

            <property name="statusAvlystLabel" type="String" label="Choice 2 Label"
                description="Text shown to the user" />
            <property name="statusAvlystValue" type="String" label="Choice 2 Value"
                description="Value stored in Flow" />

            <property name="statusTolkAvlystLabel" type="String" label="Choice 3 Label"
                description="Text shown to the user" />
            <property name="statusTolkAvlystValue" type="String" label="Choice 3 Value"
                description="Value stored in Flow" />

            <property name="value" type="String" label="Selected Value"
                description="Flow variable for selected choice" />
        </targetConfig>

    </targetConfigs>

</LightningComponentBundle>