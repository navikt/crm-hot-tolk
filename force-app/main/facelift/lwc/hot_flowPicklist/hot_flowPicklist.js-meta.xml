<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>HOT Flow Picklist</masterLabel>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <!-- Label shown above the combobox -->
            <property name="label" type="String" label="Combobox Label" />
            <property name="value" type="String" label="Selected Value" />

            <!-- Configurable picklist options -->
            <property name="option1" type="String" label="Option 1" />
            <property name="option2" type="String" label="Option 2" />
            <property name="option3" type="String" label="Option 3" />

            <!-- If true, user must select a value to continue -->
            <property name="required" type="Boolean" label="Require a selection before continuing"
                default="false" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>