<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>HOT Display Text Flow</masterLabel>
    <description>Displays a configurable paragraph of text</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <!-- Section header text -->
            <property name="label" type="String" label="Section Label" />

            <!-- Main body text displayed -->
            <property name="text" type="String" label="Text to Display" />

            <!-- Controls the font size of the body text -->
            <property name="fontSize" type="String"
                label="Font size for body text (small, medium, large)" default="medium" />

            <!-- Controls the size of the header -->
            <property name="headerSize" type="String"
                label="Header size (h-small, h-medium, h-large)" default="h-medium" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>