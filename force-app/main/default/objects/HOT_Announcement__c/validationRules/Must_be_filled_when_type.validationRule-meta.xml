<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Must_be_filled_when_type</fullName>
    <active>true</active>
    <description>Må være fult ut når typen er warning eller information</description>
    <errorConditionFormula>AND(
    OR(
        ISPICKVAL(Type__c, &quot;Warning&quot;),
        ISPICKVAL(Type__c, &quot;Information&quot;)
    ),
    ISBLANK(ValidFrom__c)
)</errorConditionFormula>
    <errorDisplayField>ValidFrom__c</errorDisplayField>
    <errorMessage>Dato felt må være fylt ut når det er av typen driftsmelding eller advarsel</errorMessage>
</ValidationRule>
