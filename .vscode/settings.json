{
	"salesforcedx-vscode-apex.enable-sobject-refresh-on-startup": true,
	"salesforcedx-vscode-apex.enable-semantic-errors": true,
	"salesforcedx-vscode-core.retrieve-test-code-coverage": true,
	"salesforcedx-vscode-core.push-or-deploy-on-save.enabled": true,
	"salesforcedx-vscode-core.show-cli-success-msg": false,
	"workbench.tree.indent": 16,
	"workbench.startupEditor": "none",
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.tabSize": 4,
	"editor.formatOnSave": true,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"git.autofetch": true,
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/.sfdx": true,
		"**/.vscode": true,
		"**/.idea": true
	},
	"uncrustify.langOverrides": {
		"apex": "JAVA",
		"apex-anon": "JAVA"
	},
	"apexPMD.rulesets": [
		"ruleset.xml"
	],
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"[apex]": {
		"editor.defaultFormatter": "LaurentTreguier.uncrustify"
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[python]": {
		"editor.defaultFormatter": "LaurentTreguier.uncrustify"
	},
	"diffEditor.ignoreTrimWhitespace": true,
	"files.exclude": {
		"**/*.cls-meta.xml": true,
		"**/*.trigger-meta.xml": true,
	},
	"python.pythonPath": "venv/bin/python",
	"eslint.nodePath": "./node_modules",
}